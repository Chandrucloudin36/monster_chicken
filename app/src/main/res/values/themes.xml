<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MonsterChicken" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MonsterChickenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c961A1C</item>
        <item name="colorPrimaryDark">@color/c961A1C</item>
        <item name="android:statusBarColor">@color/cFFE6E7</item>
        <item name="colorAccent">@color/c961A1C</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/c4d4d4d</item>
        <item name="android:state_activated">@color/c961A1C</item>
        <item name="backgroundTint">@color/c4d4d4d</item>
        <item name="colorAccent">@color/c4d4d4d</item>
        <item name="boxStrokeWidth">10dp</item>
        <item name="colorPrimary">@color/c961A1C</item>
        <item name="cornerSize">9dp</item>
        <item name="android:textSize">11sp</item>
        <item name="colorPrimaryDark">@color/c961A1C</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="prefix" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
</resources>